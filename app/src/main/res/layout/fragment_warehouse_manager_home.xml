<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".barcodegeneration.WarehouseManagerHomeFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Welcome Ware-100!"
            android:textColor="#E61515"
            android:textSize="40dp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/btnInsertNewProductInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="64dp"
            android:text="Insert New Product"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnViewAllProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View All Products"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="64dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="64dp"
            android:text="Logout"
            android:textSize="20dp" />

    </LinearLayout>
</layout>