<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tri_devs.easytrack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyTrack">
        <activity android:name=".barcodescanning.BarcodeScanning"></activity>
        <activity android:name=".barcodescanning.ProductInfoSearch" />
        <activity android:name=".barcodescanning.SearchProductName" />
        <activity
            android:name=".barcodescanning.SalesAssociateHome"
            android:label="@string/title_activity_sales_associate_home"
            android:theme="@style/Theme.EasyTrack.NoActionBar" />
        <activity android:name=".productInfoUpdate.ProductInformationDetailsActivity"></activity>
        <activity android:name=".productInfoUpdate.DepartmentManagerHomeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>